<h2><%= t ".edit" %> <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: t(".email") %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t ".currently_waiting" %> <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i><%= t ".leave_blank" %></i><br />
    <%= f.password_field :password, autocomplete: t(".new") %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> <%= t ".characters_minimun" %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: t(".new") %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i><%= t ".we_need_your" %></i><br />
    <%= f.password_field :current_password, autocomplete: t(".current_password") %>
  </div>

  <div class="form-group">
    <%= f.label :avatar %>
    <%= f.file_field :avatar, accept: "image/jpeg, image/jpg, image/gif, image/png",  class: "file-upload-default" %>
  </div>

  <div class="actions">
    <%= f.submit t ".update" %>
  </div>
<% end %>

<h3><%= t ".cancel_my_account" %></h3>

<p><%= t ".unhappy" %> <%= button_to t(".cancel_my_account"), registration_path(resource_name), data: { confirm: t(".are_you_sure") }, method: :delete %></p>

<%= link_to t(".back"), :back %>
