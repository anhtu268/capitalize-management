<div class="container-scroller">
  <div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="content-wrapper d-flex align-items-center auth register-full-bg">
      <div class="row w-100">
        <div class="col-lg-6 mx-auto">
          <div class="auth-form-light text-left p-5">
            <h2><%= t ".sign_up" %></h2>
            <h4 class="font-weight-light"><%= t ".require_fill" %></h4>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "pt-4") do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="form-group">
                <%= f.label :name, t(".username") %>
                <%= f.text_field :name, class: "form-control", placeholder: t(".fullname") %>
                <i class="mdi mdi-account"></i>
              </div>
              <div class="form-group">
                <%= f.label :email, t(".email") %>
                <%= f.email_field :email, class: "form-control", placeholder: t(".email") %>
                <i class="mdi mdi-email"></i>
              </div>
              <div class="form-group">
                <%= f.label :password, t(".pw_type") %>
                <%= f.password_field :password, class: "form-control",
                  placeholder: t(".pw") %>
                <i class="mdi mdi-eye"></i>
                <% if @minimum_password_length %>
                  <em>(<%= t ".min_pw" %> <%= @minimum_password_length %> <%= t ".character" %>)</em>
                <% end %><br />
              </div>
              <div class="form-group">
                <%= f.label :password_confirmation, t(".pw_retype") %>
                <%= f.password_field :password_confirmation, class: "form-control",
                  placeholder: t(".confirm_pw") %>
                <i class="mdi mdi-eye"></i>
              </div>
              <div class="mt-5">
                <%= f.submit t(".sign_up"), class: "btn btn-block btn-primary btn-log" %>
              </div>

              <div class="mt-2 text-center">
                <%- if controller_name != t(".session") %>
                  <%= t ".has_account" %>
                  <%= link_to new_session_path(resource_name), class: "auth-link text-black" do |f| %>
                    <span class="font-weight-medium"><%= t ".login_now" %></span>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
