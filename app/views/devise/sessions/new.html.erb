<div class="container-scroller">
  <div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="content-wrapper d-flex align-items-center auth login-full-bg">
      <div class="row w-100">
        <div class="col-lg-6 mx-auto">
          <div class="auth-form-dark text-left p-5">
            <h2><%= t ".log_in" %></h2>
            <h4 class="font-weight-light"><%= t ".require_fill" %></h4>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "pt-5") do |f| %>
             <%= render "devise/shared/error_messages", resource: resource %>
              <div class="form-group">
                <%= f.label :email, t(".email") %>
                <%= f.email_field :email, class: "form-control", placeholder: t("devise.registrations.new.email") %>
                <i class="mdi mdi-email"></i>
              </div>
              <div class="form-group">
                <%= f.label :password, t("devise.registrations.new.pw_type") %>
                <%= f.password_field :password, class: "form-control",
                  placeholder: t("devise.registrations.new.pw") %>
                <i class="mdi mdi-eye"></i>
              </div>
              <div class="mt-5">
                <%= f.submit t(".log_in"), class: "btn btn-block btn-primary btn-log" %>
              </div>
              <div class="mt-3">
                <% if devise_mapping.rememberable? %>
                  <%= f.label :remember_me, class: "float-left checkbox-inline" do %>
                    <%= f.check_box :remember_me %>
                    <span><%= t ".remember_pw" %></span>
                  <% end %>
                <% end %>
                <%- if devise_mapping.recoverable? && controller_name != t(".password") && controller_name != t(".registration") %>
                  <%= link_to t(".forgot_pw"), new_password_path(resource_name),
                    class: "float-right text-danger" %><br/>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
