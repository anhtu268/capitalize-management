<%= form_for @fund do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="form-group">
    <%= f.label :name, t(".name") %>
    <%= f.text_field :name, class: "form-control", placeholder: t(".enter_name") %>
  </div>
  <div class="form-group">
    <%= f.label :total_money, t(".total_money") %>
    <%= f.text_field :total_money, class: "form-control", placeholder:
      t(".enter_total_money") %>
  </div>
    <%= f.button yield(:button_text), class: "btn btn-success mr-2" %>
    <%= link_to t(".form_cancel"), :back, class: "btn btn-light" %>
<% end %>
