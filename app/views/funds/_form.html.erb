<%= form_for @fund do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="form-group">
    <%= f.label :name, t(".name") %>
    <%= f.text_field :name, class: "form-control", placeholder: t(".enter_name") %>
  </div>
  <div class="form-group">
    <%= f.label :total_money, t(".total_money") %>
    <%= f.text_field :total_money, class: "form-control", placeholder:
      t(".enter_total_money") %>
  </div><br>
  <h5><%= t ".contributors" %></h5>
  <div id="users">
    <%= f.fields_for :users do |user| %>
      <%= render "user_fields", f: user  %>
    <% end %>
    <div class="links mt-3">
      <%= link_to_add_association t(".add_contributors"), f, :users %>
    </div>
  </div><br>
  <%= f.button yield(:button_text), class: "btn btn-success mr-2" %>
  <%= link_to t(".form_cancel"), :back, class: "btn btn-light" %>
<% end %>
